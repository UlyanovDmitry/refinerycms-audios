<% content_for :body_content_title do %>
  <%= @audio.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @audio.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @audio.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="audios">
      <% @audios.each do |audio| %>
        <li>
          <%= link_to audio.title, refinery.audios_audio_path(audio) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
